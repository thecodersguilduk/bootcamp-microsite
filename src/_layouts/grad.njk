---
layout: base.njk
---

<div class="overflow-hidden bg-white">
  <div class="relative mx-auto max-w-7xl py-16 px-4 sm:px-6 lg:px-8">
    <div class="mx-auto max-w-prose text-base lg:grid lg:max-w-none lg:grid-cols-2 lg:gap-8">
      <div>
        <h2 class="text-lg font-semibold text-indigo-600">Case Study</h2>
        <h3 class="mt-2 text-3xl font-bold leading-8 tracking-tight text-gray-900 sm:text-4xl">Meet {{post.title}}</h3>
      </div>
    </div>
    <div class="mt-8 grid lg:grid-cols-2 lg:gap-8">
        <div class="mt-8 lg:mt-0 order-last lg:order-first">
          <div class="mx-auto max-w-prose text-base lg:max-w-none post-content text-gray-500">
            {{post.body | safe}}
          </div>
          <div class="social-icons mx-auto max-w-prose text-base lg:max-w-none post-content text-gray-500">
            {% include 'socialicons.njk' %}
          </div>
        </div>
        <div class="relative order-first lg:order-last">
          <div class="relative mx-auto max-w-prose text-base lg:max-w-none">
            <figure>
              <div class="aspect-w-12 aspect-h-7 lg:aspect-none">
                <img class="rounded-lg object-cover object-center shadow-lg" src="{{post.mainImage}}" alt="Image of {{post.title}}" width="1184" height="1376">
              </div>
            </figure>
          </div>
        </div>
    </div>
    {% if post.video %}
      <div
      class="my-24 embed-responsive embed-responsive-21by9 relative w-full overflow-hidden"
      style="padding-top: 42.857143%"
    >
      <iframe
        class="embed-responsive-item absolute top-0 right-0 bottom-0 left-0 w-full h-full"
        src="{{post.video}}"
        allowfullscreen=""
        data-gtm-yt-inspected-2340190_699="true"
        id="240632615"
      ></iframe>
    </div>
    {% endif %}
  </div>
</div>

